<?xml version="1.0" encoding="utf-8"?>

<scene version="0.6.0">
	<sensor type="perspective">
		<string name="fovAxis" value="y"/>
		<transform name="toWorld">
			<lookAt origin="0, 0.2, 6" target="0, 0, 0" up="0, 1, 0"/>
		</transform>
		<float name="fov" value="45"/>

		<sampler type="independent">
			<integer name="sampleCount" value="64"/>
		</sampler>

		<film type="hdrfilm">
			<integer name="width" value="640"/>
			<integer name="height" value="480"/>
		</film>
	</sensor>

	<bsdf type="diffuse" id="green">
		<rgb name="reflectance" value="0.5, 0.75, 0.5"/>
	</bsdf>

	<bsdf type="diffuse" id="blue">
		<rgb name="reflectance" value="0.5, 0.5, 0.75"/>
	</bsdf>

	<bsdf type="plastic" id="plastic">
		<float name="eta" value="1.5"/>
		<texture type="bitmap" name="reflectance">
			<!-- downloaded from https://opengameart.org/content/5-wood-textures -->
			<string name="filename" value="wood.png"/>
			<float name="uscale" value="2000"/>
			<float name="vscale" value="2000"/>
		</texture>
	</bsdf>

	<emitter type="point">
        <rgb name="intensity" value="2000000, 1400000, 1000000"/>
        <point name="position" x="0" y="1000" z="0"/>
	</emitter>

	<emitter type="point">
        <rgb name="intensity" value="10, 7, 5"/>
        <point name="position" x="0" y="3" z="4"/>
	</emitter>

	<shape type="ply">
		<transform name="toWorld">
			<rotate angle="30" y="1"/>
			<translate x="1.5" y="-0.5"/>
		</transform>
	    <string name="filename" value="bunny.ply"/>
		<ref id="green"/>
	</shape>

	<shape type="ply">
		<transform name="toWorld">
			<rotate angle="120" y="1"/>
			<translate x="-1.5" y="-0.5"/>
		</transform>
	    <string name="filename" value="bunny.ply"/>
		<ref id="blue"/>
	</shape>

	<shape type="rectangle">
		<transform name="toWorld">
			<rotate angle="90" x="1"/>
			<translate y="-0.5"/>
			<scale x="2000" y="1" z="2000"/>
		</transform>
		<ref id="plastic"/>
	</shape>
</scene>
