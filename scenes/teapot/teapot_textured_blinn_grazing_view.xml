<?xml version="1.0" encoding="utf-8"?>

<scene version="0.6.0">
	<sensor type="perspective">
		<string name="fovAxis" value="y"/>
		<transform name="toWorld">
			<lookAt origin="100, 5, 250" target="0, 30, 0" up="0, 1, 0"/>
		</transform>
		<float name="fov" value="45"/>

		<sampler type="independent">
			<integer name="sampleCount" value="512"/>
		</sampler>

		<film type="hdrfilm">
			<integer name="width" value="640"/>
			<integer name="height" value="480"/>
		</film>
	</sensor>

	<bsdf type="diffuse" id="checkerboard">
		<texture type="bitmap" name="reflectance">
			<string name="filename" value="default.png"/>
		</texture>
	</bsdf>

	<bsdf type="blinn" id="gray">
		<rgb name="reflectance" value="1.0, 1.0, 1.0"/>
		<float name="exponent" value="50"/>
	</bsdf>

	<shape type="obj">
	    <string name="filename" value="teapot.obj"/>
		<ref id="checkerboard"/>
	</shape>

	<shape type="rectangle">
		<transform name="toWorld">
			<rotate angle="90" x="1"/>
			<scale x="2000" y="2000" z="2000"/>
		</transform>
		<ref id="gray"/>
	</shape>

	<background>
		<rgb name="radiance" value="0.5, 0.5, 0.7"/>
	</background>
</scene>
